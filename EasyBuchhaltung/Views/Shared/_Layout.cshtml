<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EasyBuchhaltung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EasyBuchhaltung.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true" />
    <link href="https://fonts.cdnfonts.com/css/circular-std" rel="stylesheet">
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white ">
            <div class="container-fluid">               
                <div class="col ps-md-5">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/Logo.png" class="logo" /></a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa-solid fa-bars text-white"></i>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col ">
                    <ul class="navbar-nav flex-grow-1 justify-content-center ">
                        <li class="nav-item">
                            <a class="text-dark nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-dark nav-link " asp-area="">Funktionen</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-dark nav-link " asp-area="">Preise</a>
                        </li>
                    </ul>
                </div>
                <div class="collapse d-sm-inline-flex justify-content-end col pe-5">
                    <button class="btn white-btn">Login </button>
                    <button class="btn main-btn">Registrieren </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class=" bg-dark p-5 ">
        <div class="container d-flex flex-column flex-md-row align-items-center ">
            <div class=" ps-md-2 me-md-2  gap-3 gap-md-5 ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/Logo_light.png" class="logo" /></a>
            </div>
            <div class=" ps-md-2 me-md-3 text-light">
                <h1 class=" text-center text-md-start text-light"> <span style="font-weight:700">E</span>asy <span style="font-weight:700 ; color : #275CF6">B</span>uchhaltung  </h1>
            </div>
            <div class=" ps-md-5  text-light">
                <ul class="d-flex  flex-column flex-md-row gap-3 gap-lg-5 text-light align-items-center m-0 p-0">
                    <li> ABS</li>
                    <li> Impressung</li>
                    <li> Datenschutz</li>
                    <li> Privatsphäre-Einstellungen </li>
                </ul>
            </div>
        </div>
        

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
